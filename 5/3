import math

def cal(a, b):
    add = a+b
    sub = a-b
    mul = a*b
    div = a/b
    print(f"({a} + {b}) = ", a+b)
    print(f"({a} - {b}) = ", a-b)
    print(f"({a} * {b}) = ", a*b)
    print(f"({a} / {b}) = ", a/b)

    return add, sub, mul, div

x = int(input("첫 번째 정수를 입력하시오: "))
y = int(input("두 번째 정수를 입력하시오: "))

cal(x, y)
